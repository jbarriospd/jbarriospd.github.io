---
import Container from "@/components/Container.astro";
import Link from "@/components/Link.astro";
import ThemeColorSwitcher from "@/components/ui/theme-color-switcher";
import { NAV_LINKS, SITE } from "@/consts";
import { Image } from "astro:assets";
import logo from "@/assets/astro.svg";
---

<header class="sticky top-0 z-10" transition:persist>
    <Container>
        <div class="flex flex-wrap items-center justify-between gap-4 py-4">
            <Link
                href="/"
                class="flex flex-shrink-0 items-center gap-2 text-xl font-semibold transition-colors duration-300 hover:text-primary"
            >
                <Image src={logo} alt="Logo" class="size-8" />
                {SITE.TITLE}
            </Link>
            <div class="flex items-center gap-2 md:gap-4">
                <nav class="hidden items-center gap-4 text-sm sm:gap-6 md:flex">
                    {
                        NAV_LINKS.map((item) => (
                            <Link href={item.href} class="capitalize">
                                {item.label}
                            </Link>
                        ))
                    }
                </nav>
                <ThemeColorSwitcher client:load transition:persist />
            </div>
        </div>
    </Container>
</header>
